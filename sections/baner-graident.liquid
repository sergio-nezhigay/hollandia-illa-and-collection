<!-- sections/hero-banner.liquid -->
<div class="hero-banner-wrapper">
  <div class="swiper hero-banner-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide hero-slide">
          <div class="hero-banner">
            {% if section.settings.background_image %}
              <div class="hero-background">
                {{ section.settings.background_image | image_url: width: 1920 | image_tag: loading: 'lazy', alt: 'Background' }}
              </div>
            {% endif %}
            
            {% if block.settings.bed_image %}
              <div class="hero-bed-image">
                {{ block.settings.bed_image | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.title }}
              </div>
            {% endif %}
            
            <div class="hero-overlay"></div>
            
            <div class="hero-content">
              <div class="hero-text-block">
                {% if block.settings.title %}
                  <h2 class="hero-title">{{ block.settings.title }}</h2>
                {% endif %}
                
                {% if block.settings.description %}
                  <p class="hero-description">{{ block.settings.description }}</p>
                {% endif %}
                
                {% if block.settings.button_text and block.settings.button_url %}
                  <a href="{{ block.settings.button_url }}" class="hero-button">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
                
                <div class="desktop-pagination">
                  {% if section.blocks.size > 1 %}
                    <div class="hero-pagination"></div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    
    <div class="mobile-pagination">
      {% if section.blocks.size > 1 %}
        <div class="hero-pagination"></div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.hero-banner-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.hero-banner-swiper {
  position: relative;
  width: 100%;
}

.hero-slide {
  position: relative;
}

.hero-banner {
  position: relative;
  width: 100%;
  height: 600px;
  overflow: hidden;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-background img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-bed-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-bed-image img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.hero-overlay {
  position: absolute;
  top: 0;
  right: 0;
  width: 618px;
  height: 100%;
  background-image: linear-gradient(
    270deg,
    rgba(79, 59, 50, 1)   3%,
    rgba(79, 59, 50, 1)  37%,
    rgba(79, 59, 50, 0.8) 61%,
    rgba(79, 59, 50, 0.45) 80%,
    rgba(79, 59, 50, 0)  100%
  );
  z-index: 3;
}

.hero-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 618px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 4;
}

.hero-text-block {
  padding-right: 120px;
  max-width: 500px;
  text-align: right;
  color: white;
}

.hero-title {
  font-size: 52px;
  font-weight: bold;
  line-height: 1.2;
  margin: 0 0 20px 0;
}

.hero-description {
  font-size: 22px;
  line-height: 1.4;
  margin: 0 0 30px 0;
  opacity: 0.9;
}

.hero-button {
  display: inline-block;
  width: 290px;
  height: 60px;
  background-color: #574239;
  color: white;
  text-decoration: none;
  font-size: 22px;
  font-weight: 500;
  border-radius: 37px;
  border: 1px solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-left: auto;
}

.hero-button:hover {
  background-color: #6B4C42;
  border-color: #f0f0f0;
  color: white;
}

.hero-pagination {
  display: flex;
  gap: 8px;
  margin-top: 30px;
}

.desktop-pagination {
  display: block;
}

.mobile-pagination {
  display: none;
  position: absolute;
  bottom: 13px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
}

.swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: #6D574B;
  opacity: 1;
  transition: background-color 0.3s ease;
}

.swiper-pagination-bullet-active {
  background-color: #DD2D4A;
}

.swiper-pagination-bullet:hover {
  background-color: #DD2D4A;
}

@media (max-width: 768px) {
  .hero-banner {
    height: 406px;
    display: block;
    position: relative;
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-bed-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background-image: linear-gradient(
      180deg,
      rgba(79, 59, 50, 1) 0%,
      rgba(79, 59, 50, 0.95) 20%,
      rgba(79, 59, 50, 0.9) 35%,
      rgba(79, 59, 50, 0.85) 50%,
      rgba(79, 59, 50, 0.7) 65%,
      rgba(79, 59, 50, 0.4) 80%,
      rgba(79, 59, 50, 0.1) 90%,
      rgba(79, 59, 50, 0) 100%
    );
    z-index: 3;
  }
  
  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 24px;
    z-index: 4;
  }
  
  .hero-text-block {
    padding: 0 20px;
    text-align: center;
    max-width: 100%;
    width: 100%;
  }
  
  .hero-title {
    font-size: 26px;
    margin: 0 0 16px 0;
  }
  
  .hero-description {
    font-size: 12px;
    margin: 0 0 20px 0;
  }
  
  .hero-button {
    width: 204px;
    height: 40px;
    font-size: 16px;
    margin: 0 auto 20px auto;
  }
  
  .desktop-pagination {
    display: none;
  }
  
  .mobile-pagination {
    display: block;
  }
  
  .mobile-pagination .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    background-color: #FFFFFF;
  }
  
  .mobile-pagination .swiper-pagination-bullet-active {
    background-color: #DD2D4A;
  }
}

@media (max-width: 480px) {
  .hero-banner {
    height: 406px;
  }
  
  .hero-title {
    font-size: 24px;
  }
  
  .hero-description {
    font-size: 11px;
  }
  
  .hero-button {
    width: 180px;
    height: 36px;
    font-size: 14px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const heroSwiper = new Swiper('.hero-banner-swiper', {
    loop: true,
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
    pagination: {
      el: '.desktop-pagination .hero-pagination',
      type: 'bullets',
      clickable: true,
    },
    on: {
      init: function() {
        if (window.innerWidth <= 768) {
          this.pagination.el = '.mobile-pagination .hero-pagination';
          this.pagination.update();
        }
      },
      resize: function() {
        if (window.innerWidth <= 768) {
          this.pagination.el = '.mobile-pagination .hero-pagination';
        } else {
          this.pagination.el = '.desktop-pagination .hero-pagination';
        }
        this.pagination.update();
      }
    }
  });
});
</script>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "bed_image",
          "label": "Bed Image (PNG)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "חיטות מתכוננות"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "מבחר חיטות מתכוננות מבית הגלריה, במגוון עיצובים מרשימים לנוחות מקסימלית בשינת הליל שלכם."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "לכל החיטות המתכוננות"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}